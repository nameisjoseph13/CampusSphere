    <script>
      // Get the reference to the list
      const list = document.getElementById('list');
      const scrollingContainer = document.getElementById('scrollingContainer');
      let isHovered = false;
    
      // Array of items to be duplicated
      const items = [
            'After the Oil Crisis, a Food Crisis? Global Rising Food Prices and Their Effects',
            'McDonald’s Corporation: Analyzing Fast Food Industry',
            'Food Presentation as a Form of Art',
            'Recommendations for Ensuring Food Safety & Reducing Disease-Causing Mosquitoes',
            'Fast Food and Hate Groups',
            'Food Industry: Organic Restaurant',
            'Rice: Thailand Native Foods',
            'The Consequences of Fast Food',
            'Quality and Value of Food',
            'Summer Food Bid Rigging',
            'Fast Food, Quick Problem Emergence, Rapid Addiction and Slow Recovery Process'
        ];
    
      // Function to dynamically duplicate anchor tags
      function duplicateItems() {
        // Clear existing items
        list.innerHTML = '';
    
        // Duplicate items in the list
        for (let i = 0; i < items.length * 10000; i++) {
          const a = document.createElement('a');
          a.textContent = items[i % items.length];
          a.href = '#'; // Set href attribute as needed
          list.appendChild(a);
        }
      }
    
      // Call the function to initially populate the list
      duplicateItems();
    
      // Pause animation when mouse enters the container
      scrollingContainer.addEventListener('mouseover', () => {
        isHovered = true;
        list.style.animationPlayState = 'paused';
      });
    
      // Resume animation when mouse leaves the container
      scrollingContainer.addEventListener('mouseout', () => {
        isHovered = false;
        list.style.animationPlayState = 'running';
      });
    
    </script>
