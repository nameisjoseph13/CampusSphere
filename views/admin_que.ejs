<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Home</title>
    <style>
        body {
            text-align: center;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
        header {
            background-color: #333;
            color: #fff;
            padding: 10px;
        }
        img {
            max-width: 100%;
            height: auto;
        }
        /* Styles for the message container */
        .message-container {
            width: 40%;
            margin: auto;
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 10px;
            margin-top: 20px;
        }

        /* Styles for individual messages */
        .message {
            background-color: #cfe2ff;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
            position: relative;
        }

        .closebtn-message {
            position: absolute;
            top: 5px;
            right: 5px;
            color: #333;
            font-weight: bold;
            font-size: 18px;
            cursor: pointer;
        }

        .closebtn-message:hover {
            color: black;
        }

        .whatsapp-send-btn {
            background-color: #25d366;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-bottom: 10px;
        }
        .whatsapp-send-btn:hover {
            background-color: #128c7e;
        }
    </style>
</head>
<body>
    <header>
        <%- include('admin_head.ejs') %>
    </header>
    <main>
        <div class="message-container">
            <% if (Array.isArray(queries) && queries.length > 0) { %>
                <% queries.forEach(query => { %>
                    <div class="message sent" data-roll-no="<%= query.Roll_No %>">
                        <p>Roll No: <%= query.Roll_No %></p>
                        <p>Name: <%= query.Name %></p>
                        <p>Query: <%= query.Query %></p>
                        <span class="closebtn-message" onclick="deleteMessage('<%= query.Roll_No %>');">&times;</span>
                        <button class="whatsapp-send-btn" onclick="sendReply('<%= query.Roll_No %>')">Send</button>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No queries found</p>
            <% } %>
        </div>
        <script>
            function sendReply(rollNo) {
                console.log("Roll No:", rollNo); // Check if rollNo is received correctly
                // Redirect to '/fac_reply' with rollNo as a parameter
                window.location.href = `/admin_reply/${rollNo}`;
            }
            function deleteMessage(rollNo) {
                if (confirm("Are you sure you want to delete this message?")) {
                    fetch(`/adelete-query/${rollNo}`, {
                        method: 'DELETE'
                    })
                    .then(response => {
                        if (response.ok) {
                            document.querySelector(`.message[data-roll-no="${rollNo}"]`).remove();
                        } else {
                            alert("Failed to delete the message.");
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert("Failed to delete the message.");
                    });
                }
            }
        </script>
    </main>
</body>
</html>
